{
    "compilerOptions": {
      "module": "ES2022",
      "target": "ESNext",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "sourceMap": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      // "resolveJsonModule": true,
      "importHelpers": true
    },
    "include": [
      "src",
      "env.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "package-lock.json",
      ".gitignore"
    ],
  }